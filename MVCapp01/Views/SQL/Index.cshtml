@model IEnumerable<MVCapp01.Models.tbl_User2>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#myModal").modal('show');
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myToast').toast('show');
            $('.toast').toast({ delay: 1000, animation: false });
        });
    </script>
}

<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Szinkronizáció történt</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <h6><b>@ViewBag.Datum</b></h6>
                    <h6>@ViewBag.Esemeny : @ViewBag.Eredmeny</h6>
                </div>
                <div class="modal-footer">
                    <small class="text-muted">Az alkalmazás minden betöltéskor szinkronizálja az adatokat a táblák között.</small>
                </div>
            </div>
        </div>
    </div>
</div>


<div><h2>Index</h2></div>
<div id="myToast" role="alert" aria-live="polite" aria-atomic="true" class="toast" ata-delay="100001" style="position: absolute; top: 0; right: 0;">
    <div class="toast-header">
        <img src="..." class="rounded mr-2" alt="...">
        <strong class="mr-auto">Bootstrap</strong>
        <small>11 mins ago</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        Hello, world! This is a toast message.
    </div>
</div>

