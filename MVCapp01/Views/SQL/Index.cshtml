@if (@ViewBag.SpR.Count > 0)
{
    <div class="container-fluid">
        <div class="row my-5">
            <div class="col-sm-12 col-md-12">
                <div class="card text-dark bg-light mb-3 shadow p-3 mb-5 rounded">

                    <div class="card-header"><h4>A következő elemek lettek áttöltve:</h4></div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <tr class="alert-info">
                                <th>UserEmail</th>
                                <th>Password</th>
                                <th>Role</th>
                            </tr>
                            @foreach (var i in @ViewBag.SpR)
                            {
                                <tr>
                                    <td>@i.UserEmail</td>
                                    <td>@i.Password</td>
                                    <td>@i.Role</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
